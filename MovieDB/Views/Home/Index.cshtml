<section class="row">
        @foreach (var movie in Model)
        {
            <article class="post col-md-6">
                <h3>@movie.Title</h3>
                <div class="about">
                    <b>Director: </b> <i>@movie.Director</i> &nbsp<br> <b>Genre: </b><i>@movie.Genre</i>  &nbsp <br><b>Rating (0/10): </b> <i>@movie.Rating</i> &nbsp  <br><b>Release Date: </b><i>@movie.Date.ToShortDateString()</i> 
                </div>
                <div class="body"><b>Summary: </b> <i>@Html.Raw(movie.Body)</i></div>
                
                <div class="post">
                    <b>Poster</b>
                </div>
                <div>
                        @{ if (movie.Image != null)
                            {
                                <img src="data:image;base64,@System.Convert.ToBase64String(movie.Image)" width="182" height="270" />
                            }
                        }
                 </div>
                            
            </article>
            
      }
    
    </section>
